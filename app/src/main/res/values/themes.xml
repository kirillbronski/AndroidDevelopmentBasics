<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AndroidDevelopmentBasics" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="textInputStyle">@style/GlobalTextInputStyle</item>
        <item name="materialButtonStyle">@style/GlobalButtonStyle</item>
    </style>

    <style name="SplashActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="GlobalTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:minWidth">@dimen/big_width</item>
    </style>

    <style name="GlobalButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="GlobalTextInputStyle.Big">
        <item name="android:minWidth">@dimen/big_width</item>
    </style>

    <style name="GlobalTextInputStyle.Secondary">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GlobalTextInputStyle.Secondary.Big">
        <item name="android:minWidth">@dimen/big_width</item>
    </style>

    <style name="DefaultDashboardItemStyle">
        <item name="android:layout_width">@dimen/dashboard_item_width</item>
        <item name="android:layout_height">@dimen/dashboard_item_height</item>
    </style>

    <style name="ProfileHintTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="BaseTextHint">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileValueTextView" parent="BaseTextHint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
    </style>

    <style name="TitleTextView" parent="BaseTextHint">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Theme.AndroidDevelopmentBasics" parent="Base.Theme.AndroidDevelopmentBasics" />
</resources>